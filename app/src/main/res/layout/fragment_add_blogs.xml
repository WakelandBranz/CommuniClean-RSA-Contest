<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/colorPrimary"
tools:context=".AddBlogsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ptitle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Title"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <View
            style="@style/Divider"
            android:layout_below="@id/titleHeader"
            android:layout_height="2dp"
            android:layout_marginBottom="13dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorGray"
            android:backgroundTint="@color/colorWhite"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shadow2"
            android:hint="Enter Title"
            android:singleLine="true"
            android:id="@+id/ptitle"
            android:minHeight="80dp"
            android:padding="10dp" />
        <TextView
            android:id="@+id/imageHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/imagep"
            android:layout_marginTop="10dp"
            android:text="Image"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <View
            style="@style/Divider"
            android:layout_below="@id/imageHeader"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorGray"
            android:backgroundTint="@color/colorWhite"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imagep"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_shadow2"
            android:src="@drawable/ic_images" />
        <TextView
            android:id="@+id/descriptionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/pdes"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <View
            style="@style/Divider"
            android:layout_below="@id/descriptionHeader"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorGray"
            android:backgroundTint="@color/colorWhite"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shadow2"
            android:hint="Enter Description"
            android:layout_marginTop="15dp"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:gravity="start"
            android:singleLine="true"
            android:id="@+id/pdes"
            android:padding="10dp" />

        <Button
            android:id="@+id/pupload"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="25dp"
            android:layout_marginTop="20sp"
            android:text="Upload" />
    </LinearLayout>
</ScrollView>

